{
  "name": "eclosia-launcher",
  "description": "Launcher for Eclosia",
  "author": "Alexandre Debris <alexandre@debris.ovh>",
  "productName": "Eclosia Launcher",
  "version": "0.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build-prod": "ng build --buildOptimizer=true --prod --outputHashing=all --sourceMap=true",
    "jenkins": "node clean.js && ng build && electron-builder",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "electron-build-prod": "npm run build-prod && electron .",
    "electron-build": "npm run build && electron .",
    "dist": "node clean.js && npm run build-prod && electron-builder"
  },
  "build": {
    "appId": "life.eclosia.launcher",
    "productName": "Eclosia-Launcher",
    "compression": "maximum",
    "asar": true,
    "files": [
      "dist/**/*",
      "main.js",
      "electron/**/*",
      "data/**/*"
    ],
    "nsis": {
      "oneClick": false
    },
    "directories": {
      "output": "build",
      "buildResources": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "dist/assets/logo.png"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb"
    }
  },
  "dependencies": {
    "@angular/animations": "10.0.9",
    "@angular/common": "10.0.9",
    "@angular/compiler": "10.0.9",
    "@angular/core": "10.0.9",
    "@angular/forms": "10.0.9",
    "@angular/platform-browser": "10.0.9",
    "@angular/platform-browser-dynamic": "10.0.9",
    "@angular/router": "10.0.9",
    "ejs-electron": "2.1.1",
    "js-yaml": "3.14.0",
    "moment": "2.27.0",
    "rxjs": "6.5.5",
    "shell": "0.5.0",
    "tslib": "2.0.1",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1000.6",
    "@angular/cli": "10.0.6",
    "@angular/compiler-cli": "10.0.9",
    "@types/jasmine": "3.5.12",
    "@types/jasminewd2": "2.0.8",
    "@types/node": "12.12.54",
    "codelyzer": "6.0.0",
    "electron": "9.2.0",
    "electron-builder": "22.8.0",
    "jasmine-core": "3.5.0",
    "jasmine-spec-reporter": "5.0.2",
    "karma": "5.0.9",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-jasmine": "3.3.1",
    "karma-jasmine-html-reporter": "1.5.4",
    "protractor": "7.0.0",
    "ts-node": "8.3.0",
    "tslint": "6.1.3",
    "typescript": "3.9.7",
    "yarn": "1.22.4"
  },
  "optionalDependencies": {
    "fsevents": "*"
  }
}
